<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>SparkBlog</title>
        <link href='https://fonts.googleapis.com/css?family=Noto+Serif:400,400italic,700|Noto+Sans:700,400' rel='stylesheet' type='text/css'>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="{{ base_url() }}/css/normalize.css">
<link rel="stylesheet" href="{{ base_url() }}/css/site.css">
    </head>
    <body>
        <header>
            <div class="container">
                <div class="site-header">
                    <a class="logo" href="/">SparkBlog</a>
                    <a class="new-entry button button-round" href="/new"><i class="material-icons">create</i></a>
                </div>
            </div>
        </header>
        <section>
            <div class="container">
                <div class="entry-list single">

                    <article>
                        <h1>{{ post.title|raw }}</h1>
                        <time datetime="{{ post.date }}">{{ post.date|date('F d, Y') }}</time>
                        <div class="body">
                            <p>{{ post.body|raw }}</p>
                          <!--  <a href="">dolor augue</a> -->
                            <p><a class="link" href= "/edit/{{ post.id }}">Edit Entry</a></p>
                        </div>
                    </article>
                </div>
            </div>
        </section>
        <section class="entry-comments">
            <div class="container">
              {% if comments is not empty %}
                    <h2>Comments</h2>

                    {% for comment in comments %}
                    <div class="comment">
                        <strong>{{ comment.name }}</strong>
                        <time datetime="{{ comment.date }}">{{ comment.date|date('F d, Y') }}</time>
                        <p>{{ comment.body }}</p>
                    </div>

                    {% endfor %}

               {% endif %}
                    <div class="new-comment">
                        <form method="POST" action="{{ detail.id }}/{{ detail.title|raw }}">

                              <label for="name">Name</label>
                              <input type="text" name=""><br>
                              <label for="comment">Comment</label>
                              <textarea rows="5" name="comment"></textarea>

                              <input type="submit" value="Post Comment" class="button">
                              <input type="hidden" name="id" value=" {{ details.id }} " >
                        </form>
                    </div>
            </div>
        </section>
        <footer>
            <div>
                <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
                <a href="#">Terms</a>
            </div>
        </footer>
    </body>
</html>
