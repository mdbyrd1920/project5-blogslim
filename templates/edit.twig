<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>SparkBlog</title>
        <link href='https://fonts.googleapis.com/css?family=Noto+Serif:400,400italic,700|Noto+Sans:700,400' rel='stylesheet' type='text/css'>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="{{ base_url() }}/css/normalize.css">
<link rel="stylesheet" href="{{ base_url() }}/css/site.css">
    </head>
    <body>
        <header>
            <div class="container">
                <div class="site-header">
                    <a class="logo" href="/">SparkBlog</a>
                    <a class="new-entry button button-round" href="/new"><i class="material-icons">create</i></a>
                </div>
            </div>
        </header>
        <section>

            <div class="container">
                <div class="edit-entry">
                    <h2>Edit Entry</h2>
                    <form action="/edit/{{ post.id }}" method="POST">


                        <label for="title"> Title</label>
                        <input type="text" name="title" value="{{ post.title|raw }}" required><br>
                        <label for="date"></label>
                        <label for="body">Entry</label>
                        <input type="hidden" name="date" value="{{ post.date }}"><br>
                        <textarea rows="5" name="body" required>{{ post.body|raw }}</textarea>
                        <input type="submit" value="Save Entry" class="button">
                        <a href="/detail/{{ post.id }}" class="button button-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </section>
        <footer>
            <div>
                <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
                <a href="#">Terms</a>
            </div>
        </footer>
    </body>
</html>
